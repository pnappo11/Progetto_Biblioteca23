<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <!-- Quando premi il tasto Run sul progetto -->
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>javafx:run</goal>
        </goals>
    </action>

    <!-- Quando fai Run File sulla Main (run-single) -->
    <action>
        <actionName>run-single</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>javafx:run</goal>
        </goals>
    </action>

    <!-- (opzionale) Debug: se premi Debug usa sempre javafx:run -->
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>javafx:run</goal>
        </goals>
        <properties>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
</actions>

